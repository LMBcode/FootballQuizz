<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Auth.CategoriesActivity">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:text="Quiz APP"
    android:textSize="25dp"
    android:textColor="@color/white"
    android:fontFamily="@font/san_francisco"
    android:layout_marginTop="50dp"
    android:textStyle="bold"/>

    <ImageView
        android:id="@+id/football"
        android:layout_width="175dp"
        android:layout_height="200dp"
        android:src="@drawable/messi2012"
        android:scaleType="fitXY"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/football"
        android:layout_marginTop="150dp"
        android:text="FOOTBALL"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/football"
        android:fontFamily="@font/san_francisco"
        app:layout_constraintTop_toTopOf="parent"/>


    <ImageView
        android:id="@+id/nba"
        android:layout_width="175dp"
        android:layout_height="200dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/nbalogo"
        android:scaleType="fitXY"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/textnba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/nba"
        android:layout_marginTop="150dp"
        android:text="NBA"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/nba"
        android:fontFamily="@font/san_francisco"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/flag"
        android:layout_width="175dp"
        android:layout_height="200dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/world"
        android:scaleType="fitXY"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/nba"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/textflag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/nba"
        android:layout_marginTop="16dp"
        android:text="FLAGS"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/nba"
        android:fontFamily="@font/san_francisco"
        app:layout_constraintTop_toBottomOf="@id/flag"/>


</androidx.constraintlayout.widget.ConstraintLayout>